@model DATN_QLKS.Models.tblLoaiPhong
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-group .rounded{
        height: 350px;
        width: 400px;
    }
    .form-horizontal .col-md-10 h1 {
        color: #111111;
        margin-bottom: 24px;
        font-size: 40px;
        font-weight: 400;
        font-family: "Lora", serif;
    }

    .form-horizontal .col-md-10 h2 {
        color: #dfa974;
        font-weight: 700;
        margin-bottom: 25px;
    }

    .form-horizontal .col-md-10 h3 {
        height: 100%;
        font-family: "Cabin", sans-serif;
        -webkit-font-smoothing: antialiased;
        font-size: 16px;
        color: #19191a;
        line-height: 36px;
    }
    .col-md-push-1 {
        left: 0% !important;
    }
    .form-group {
        padding-left: 90px !important;
    }
    .col-md-10 {
        width: 100% !important;
    }
</style>

<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>


<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                <h2 class="cursive-font primary-color">Chi tiết phòng</h2>
                <div class="">
                    <a href="">Loại phòng</a>
                    <span>>Chi tiết phòng</span>
                </div>
            </div>

            <div class="col-md-12">

                <div class="col-md-6 animate-box">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            @Html.Label("", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div id="img">
                                @{
                                    String s = Model.anh;
                                    try
                                    {
                                        List<String> dsImg = Newtonsoft.Json.JsonConvert.DeserializeObject<List<String>>(s);
                                        foreach (String m in dsImg)
                                        {
                                            <img src="@m" class="rounded" style="height:200px;padding:3px" />
                                        }
                                    }
                                    catch { }
                                }
                            </div>
                        </div>

                    }
                </div>
                <div class="col-md-5 col-md-push-1 animate-box">

                    <div class="gtco-contact-info">

                            <div class="table-responsive">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                            <div class="col-md-10">
                                                <h1>@Html.DisplayFor(model => model.mo_ta, new { htmlAttributes = new { @class = "form-control" } })</h1>
                                                @Html.ValidationMessageFor(model => model.mo_ta, "", new { @class = "text-danger" })
                                            </div><br />

                                            <div class="col-md-10">
                                                <h2>@Html.DisplayFor(model => model.gia, new { htmlAttributes = new { @class = "form-control" } }) VND / Ngày</h2>
                                                @Html.ValidationMessageFor(model => model.gia, "", new { @class = "text-danger" })
                                            </div><br />

                                            <div class="col-md-10">
                                                <h3>Phụ thu: @Html.DisplayFor(model => model.ti_le_phu_thu, new { htmlAttributes = new { @class = "form-control" } }) %</h3>
                                                @Html.ValidationMessageFor(model => model.ti_le_phu_thu, "", new { @class = "text-danger" })
                                            </div><br />

                                            <div class="col-md-10">
                                                @Html.ValidationMessageFor(model => model.ti_le_phu_thu, "", new { @class = "text-danger" })
                                            </div><br />

                                            <div class="col-md-10">
                                                <h3>Dịch vụ: Wifi, Television, Bathroom,...</h3>
                                                @Html.ValidationMessageFor(model => model.ti_le_phu_thu, "", new { @class = "text-danger" })
                                            </div><br />

                                            <div class="col-md-10">
                                                @Html.DisplayFor(model => model.chi_tiet_phong, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.chi_tiet_phong, "", new { @class = "text-danger" })
                                            </div>                                       
                                    </div>
                                }
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "RoomList")
</p>