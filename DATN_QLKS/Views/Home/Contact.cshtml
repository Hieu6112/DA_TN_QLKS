
@{
    ViewBag.Title = "Liên Hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">

                <div class="row row-mt-15em">
                    <div class="col-md-12 mt-text animate-box" data-animate-effect="fadeInUp">
                        <span class="intro-text-small">Khách sạn Accor Hotel</span>
                        <h1 class="cursive-font">Kính chào quý khách!</h1>
                    </div>

                </div>

            </div>
        </div>
    </div>
</header>

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6 animate-box">
                    <h3>Gửi liên hệ</h3>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        DATN_QLKS.Models.tblKhachHang kh = (DATN_QLKS.Models.tblKhachHang)Session["KH"];
                        if (kh == null)
                        {
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="sr-only" for="name">Name</label>
                                    @*<input type="text" id="name" class="form-control" placeholder="Your firstname">*@
                                    @Html.TextBox("ho_ten", null, new { @class = "form-control", placeholder = "Họ và tên" })
                                </div>

                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="sr-only" for="email">Email</label>
                                    @*<input type="text" id="email" class="form-control" placeholder="Your email address">*@
                                    @Html.TextBox("mail", null, new { @class = "form-control", placeholder = "Địa chỉ Email" })
                                </div>
                            </div>
                        }

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="sr-only" for="message">Message</label>
                                @*<textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Write us something"></textarea>*@
                                @Html.TextArea("noi_dung", null, new { @class = "form-control", placeholder = "Nội dung", cols = "30", rows = "10" })
                            </div>
                        </div>
                        <div class="form-group">
                            <input onclick="return checkSMS()" type="submit" value="Gửi" class="btn btn-primary">
                        </div>

                    }
                </div>
                <div class="col-md-5 col-md-push-1 animate-box">

                    <div class="gtco-contact-info">
                        <h3>Thông tin liên hệ</h3>
                        <ul>
                            <li class="address">Nhổn <br> Bắc từ liêm - Hà Nội</li>
                            <li class="phone"><a href="tel://0384567890">+ 0384567890</a></li>
                            <li class="email"><a href="mailto:info@yoursite.com">longtrunghieu2000hehe@gmail.com</a></li>
                            <li class="url"><a href="http://ghotel.somee.com">AccorHotel.Com</a></li>
                        </ul>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function checkSMS() {
        var ht = $('#ho_ten');
        var mail = $('#mail');
        if (ht != null)
            if (ht.val() == "") {
                alert('Phải nhập họ tên !');
                return false;
            }
        if (mail != null)
            if (mail.val() == "") {
                alert('Phải nhập email !');
                return false;
            }
        var nd = $('#noi_dung').val();
        if (nd.length < 10) {
            alert('Nội dung quá ngắn !');
            return false;
        } else if (nd.length >= 500) {
            alert('Nội dung quá dài !');
            return false;
        }
        return true;
    }
</script>