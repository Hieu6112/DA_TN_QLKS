@model IEnumerable<DATN_QLKS.Models.tblTinNhan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Danh sách tin nhắn</li>
</ol>

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách tin nhắn
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" id="dataTable" cellspacing="0">
                <tr>
                    <th>
                        @Html.DisplayName("Ngày gửi")
                    </th>
                    <th>
                        @Html.DisplayName("Họ tên")
                    </th>
                    <th>
                        @Html.DisplayName("Mail")
                    </th>
                    <th>
                        @Html.DisplayName("Nội dung")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ngay_gui)
                        </td>
                        <td>

                            @if (item.ma_kh == null)
                            {
                                @item.ho_ten
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.ma_kh)
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ho_ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.mail)
                            <strong>
                                @if (item.ma_kh == null)
                                {
                                    @item.mail
                                }
                                else
                                {
                                    @item.tblKhachHang.mail
                                }
                            </strong>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.noi_dung)
                        </td>
                        <td>
                            <a href="@Url.Action("Details","TinNhan",new { id = item.id})"><div class="btn btn-info badge-g">Details</div></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at @DateTime.Now</div>
</div>


